@{
    ViewBag.Title = "Index";
}

@model CommandPanel.Models.ImportantUserModels.ImportantUserListViewModel

<div class="row">
    @using (Html.BeginForm("AddImportantUser", "ImportantUsers", FormMethod.Post))
    {
        <input type="hidden" name="accountId" value="@Model.AccountId" />

        <div class="input-hashtag ">
            <div>
                <input type="text" name="user" class="form-control" />
            </div>
            <input type="submit" value="Send word" class="btn btn-primary" />
        </div>
    }
</div>

@foreach (var user in @Model.Users)
{
    <div class="alert-info alert"> <span>@user.UserLink</span> <a href="@Url.Action("RemoveImportantUser", "ImportantUsers", new { accountId = @Model.AccountId, user = user.UserLink })" class="btn btn-danger pull-right">Remove</a> </div>
}

