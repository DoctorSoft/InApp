@{
    ViewBag.Title = "Index";
}

@model CommandPanel.Models.ConfigurationsModels.ConfigurationsViewModel

<div class="">
    <div class="row">
        @using (Html.BeginForm("UpdateSettings", "Configurations", FormMethod.Post))
        {
            <input type="hidden" name="accountId" value="@Model.AccountId" />

            <div class="input-hashtag ">
                Login
                <div>
                    <input type="text" name="Login" class="form-control" value="@Model.Login" />
                </div>
            </div>

            <div class="input-hashtag ">
                Password
                <div>
                    <input type="text" name="Password" class="form-control" value="@Model.Password" />
                </div>
            </div>

            <div class="input-hashtag ">
                Home Url
                <div>
                    <input type="text" name="HomePage" class="form-control" value="@Model.HomePage" />
                </div>
            </div>

            <div class="input-hashtag ">
                Proxy
                <div>
                    <input type="text" name="Proxy" class="form-control" value="@Model.Proxy" />
                </div>
            </div>

            <div class="input-hashtag ">
                Proxy Name
                <div>
                    <input type="text" name="ProxyName" class="form-control" value="@Model.ProxyName" />
                </div>
            </div>

            <div class="input-hashtag ">
                Proxy Password
                <div>
                    <input type="text" name="ProxyPassword" class="form-control" value="@Model.ProxyPassword" />
                </div>
            </div>

            <div class="input-hashtag ">
                Remove all users
                <div>
                    @Html.CheckBoxFor(model => model.RemoveAllUsers, new { @class = "form-control" })
                </div>
            </div>

            <div class="input-hashtag ">
                Instagram Id
                <div>
                    <input type="text" name="InstagramId" class="form-control" value="@Model.InstagramId" />
                </div>
            </div>
            
            <div class="input-hashtag ">
                Switching enabled
                <div>
                    @Html.CheckBoxFor(model => model.SwitchingEnabled, new {@class = "form-control"})
                </div>
            </div>

            <div class="input-hashtag ">
                Start hour to follow users
                <div>
                    <input type="number" name="FollowingStartHour" class="form-control" value="@Model.FollowingStartHour"/>
                </div>
            </div>

            <div class="input-hashtag ">
                Start hour to unfollow users
                <div>
                    <input type="number" name="UnfollowingStartHour" class="form-control" value="@Model.UnfollowingStartHour"/>
                </div>
            </div>

            <div class="input-hashtag ">
                Min users to follow
                <div>
                    <input type="number" name="MinUsersToFollowCount" class="form-control" value="@Model.MinUsersToFollowCount"/>
                </div>
            </div>

            <div class="input-hashtag ">
                Max users to follow
                <div>
                    <input type="number" name="MaxUsersToFollowCount" class="form-control" value="@Model.MaxUsersToFollowCount" />
                </div>
            </div>

            <input type="submit" value="Save" class="btn btn-primary" />
        }
    </div>
</div>
